{% extends '::base.html.twig' %}
{% block body %}
	{% block barre %}{{ parent() }}{% endblock %}
	{% block menu %}{{ parent() }}{% endblock %}
		<div id="i-am-user-edit-page"></div>
		<div id="page_content">
	        <div id="page_content_inner">
	        	<div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-large-1-1">
                        <div class="md-card">
				        	<div class="uk-breadcrumb-wrapper">
					        	<ul class="uk-breadcrumb">
					        		<li><a href="{{ path('restaurant_restaurant') }}"><i class="material-icons">home</i></a></li>
					        		<li><a href="{{ path('user_index') }}">Liste des Clients</a></li>
					        		<li><a href="#">Ajouter Client</a></li>
					        	</ul>
					        </div>
					    </div>
					</div>
				</div>
	            <form action="{{ path('user_new') }}" class="uk-form-stacked" method="post" id="user_edit_form">
	                <div class="uk-grid" data-uk-grid-margin>
	                    <div class="uk-width-large-1-1">
	                        <div class="md-card">
	                            <div class="user_heading" data-uk-sticky="{ top: 48, media: 960 }">
	                                <div class="user_heading_content">
	                                    <h2 class="heading_b"><span class="uk-text-truncate">Ajouter nouveau utilisateur</span></h2>
	                                </div>
	                                <div class="md-fab-wrapper">
	                                    <button type="submit" id="user_edit_save" data-uk-tooltip="{cls:'uk-tooltip-small',pos:'bottom'}" class="md-fab md-fab-small md-fab-success" title="Save"><i class="material-icons md-color-white">&#xE161;</i></button>
	                                </div>
	                            </div>
	                            <div class="user_content">
	                                <ul id="user_edit_tabs" class="uk-tab" data-uk-tab="{connect:'#user_edit_tabs_content'}">
	                                    <li class="uk-active"><a href="#">À propos</a></li>
	                                </ul>
	                                <ul id="user_edit_tabs_content" class="uk-switcher uk-margin">
	                                    <li>
	                                        <div class="uk-margin-top">
	                                            <h3 class="full_width_in_card heading_c">
	                                                Information générale
	                                            </h3>
	                                            <div class="uk-grid" data-uk-grid-margin>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="user_last_name">Nom du client</label>
	                                                    <input class="md-input" type="text" id="user_last_name" name="user[last_name]" value="" />
	                                                </div>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="user_first_name">Prénom du client</label>
	                                                    <input class="md-input" type="text" id="user_first_name" name="user[first_name]" value="" />
	                                                </div>
	                                            </div>
	                                            <div class="uk-grid" data-uk-grid-margin>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="user_sexe">Sexe</label>
	                                                    <select name="user[sexe]" class="" data-md-selectize id="user_sexe">
	                                                    	<option value="Homme" selected>Homme</option>
	                                                    	<option value="Femme">Femme</option>
	                                                    </select>
	                                                </div>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="user_first_name">Entreprise</label>
	                                                    <input class="uk-width-1-1" id="company_json" name="user[company_id]" type="text" value="" />
	                                                </div>
	                                            </div>
	                                            <div class="uk-grid" data-uk-grid-margin>

	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="user_date_birthday">Date d'anniversaire</label>
	                                                    <input class="kendodatepicker" type="text" id="user_date_birthday" name="user[date_birthday]" value="" />
	                                                </div>
	                                            </div>
	                                            <div class="uk-grid" data-uk-grid-margin>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="user_langue">Langue</label>
	                                                    <select name="user[langue]" class="" data-md-selectize id="user_langue">
	                                                    	<option value="Français" selected>Français</option>
	                                                    	<option value="Anglais">Anglais</option>
	                                                    	<option value="Espagnole">Espagnole</option>
	                                                    </select>
	                                                </div>
	                                            </div>
	                                            <h3 class="full_width_in_card heading_c">
	                                                Information
	                                            </h3>
	                                            <div class="uk-grid">
	                                                <div class="uk-width-1-1">
	                                                    <div class="uk-grid uk-grid-width-1-1 uk-grid-width-large-1-2" data-uk-grid-margin>
	                                                        <div>
	                                                            <div class="uk-input-group">
	                                                                <span class="uk-input-group-addon">
	                                                                    <i class="md-list-addon-icon material-icons">&#xE158;</i>
	                                                                </span>
	                                                                <label>Email</label>
	                                                                <input type="text" class="md-input" name="user[email]" value="" />
	                                                            </div>
	                                                        </div>
	                                                        <div>
	                                                            <div class="uk-input-group">
	                                                                <span class="uk-input-group-addon">
	                                                                    <i class="md-list-addon-icon material-icons">https</i>
	                                                                </span>
	                                                                <label>Mot de passe</label>
	                                                                <input type="password" class="md-input" name="user[password]" value="" />
	                                                            </div>
	                                                        </div>
	                                                        <div>
	                                                            <div class="uk-input-group">
	                                                                <span class="uk-input-group-addon">
	                                                                    <i class="md-list-addon-icon material-icons">&#xE0CD;</i>
	                                                                </span>
	                                                                <label>Téléphone</label>
	                                                                <input type="text" class="md-input" name="user[phone_number]" value="" />
	                                                            </div>
	                                                        </div>
	                                                        <div>
	                                                            <div class="uk-input-group">
	                                                                <span class="uk-input-group-addon">
	                                                                    <i class="md-list-addon-icon material-icons">&#xE0CD;</i>
	                                                                </span>
	                                                                <label>Mobile</label>
	                                                                <input type="text" class="md-input" name="user[fixe_number]" value="" />
	                                                            </div>
	                                                        </div>
	                                                    </div>
	                                                </div>
	                                            </div>
	                                        </div>
	                                    </li>
	                                </ul>
	                            </div>
	                        </div>
	                    </div>
	                    <div class="uk-width-large-3-10">
	                        <div class="md-card">
	                            <div class="md-card-content">
	                                <h3 class="heading_c uk-margin-medium-bottom">Autre Configuration</h3>
	                                <div class="uk-form-row">
	                                    <input type="checkbox" checked data-switchery name="user[vip]" id="user_vip" />
	                                    <label for="user_vip" class="inline-label">VIP</label>
	                                </div>
	                                <div class="uk-form-row">
	                                    <input type="checkbox" checked data-switchery name="user[newsletter]" id="user_newsletter" />
	                                    <label for="user_newsletter" class="inline-label">Newsletter</label>
	                                </div>
	                                <hr class="md-hr">
	                                <!-- <div class="uk-form-row">
	                                    <label class="uk-form-label" for="user_edit_role">User Role</label>
	                                    <select data-md-selectize>
	                                        <option value="">Select...</option>
	                                        <option value="admin">Admin</option>
	                                        <option value="super_admin">Super Admin</option>
	                                        <option value="editor" selected>Editor</option>
	                                        <option value="author">Author</option>
	                                        <option value="none">None</option>
	                                    </select>
	                                </div> -->
	                            </div>
	                        </div>
	                    </div>
	                </div>
	            </form>
	        </div>
	    </div>
    {% block modals %}
		{{ parent() }}
	{% endblock %}
{% endblock %}