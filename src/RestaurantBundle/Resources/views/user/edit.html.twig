{% extends '::base.html.twig' %}
{% block body %}
	{% block barre %}{{ parent() }}{% endblock %}
	{% block menu %}{{ parent() }}{% endblock %}
		<div id="i-am-user-edit-page"></div>
		<div id="page_content">
	        <div id="page_content_inner">
	        	<div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-large-1-1">
                        <div class="md-card">
				        	<div class="uk-breadcrumb-wrapper">
					        	<ul class="uk-breadcrumb">
					        		<li><a href="{{ path('restaurant_restaurant') }}"><i class="material-icons">home</i></a></li>
					        		<li><a href="{{ path('user_index') }}">Liste des Utilisateurs</a></li>
					        		<li><a href="#">Modifier : {{ user.firstName~' '~user.lastName }}</a></li>
					        	</ul>
					        </div>
					    </div>
					</div>
				</div>
	            <form action="{{ path('user_save',{id:user.id}) }}" class="uk-form-stacked" method="post" id="user_edit_form">
	                <div class="uk-grid" data-uk-grid-margin>
	                    <div class="uk-width-large-1-1">
	                        <div class="md-card">
	                            <div class="user_heading" data-uk-sticky="{ top: 48, media: 960 }">
	                                <div class="user_heading_avatar fileinput fileinput-new" data-provides="fileinput">
	                                    <div class="fileinput-new thumbnail">
	                                        <div class="item-avatar-wrapper">
												{% if user.companyId %}
													<span class="item-avatar uk-text-contrast md-bg-{{user.companyId.typeCompanyId.color}}">{{user.firstName[:1]~user.lastName[:1]|capitalize }}</span>
												{% endif %}
	                            			</div>
	                                    </div>
	                                </div>
	                                <div class="user_heading_content">
	                                    <h2 class="heading_b"><span class="uk-text-truncate" id="user_edit_uname">{{ user.firstName~' '~user.lastName }}</span>{% if user.companyId %}<span class="sub-heading" id="user_edit_position">{{ user.companyId.name }}</span>{% endif %}</h2>
	                                </div>
	                                <div class="md-fab-wrapper">
	                                    <button type="submit" id="user_edit_save" data-uk-tooltip="{cls:'uk-tooltip-small',pos:'bottom'}" class="md-fab md-fab-small md-fab-success" title="Save"><i class="material-icons md-color-white">&#xE161;</i></button>
	                                </div>
	                            </div>
	                            <div class="user_content">
	                                <ul id="user_edit_tabs" class="uk-tab" data-uk-tab="{connect:'#user_edit_tabs_content'}">
	                                    <li class="uk-active"><a href="#">À propos</a></li>
	                                </ul>
	                                <ul id="user_edit_tabs_content" class="uk-switcher uk-margin">
	                                    <li>
	                                        <div class="uk-margin-top">
	                                            <h3 class="full_width_in_card heading_c">
	                                                Information générale
	                                            </h3>
	                                            <div class="uk-grid" data-uk-grid-margin>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="user_last_name">Nom du client</label>
	                                                    <input class="md-input" type="text" id="user_last_name" name="user[last_name]" value="{{ user.lastName }}" />
	                                                </div>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="user_first_name">Prénom du client</label>
	                                                    <input class="md-input" type="text" id="user_first_name" name="user[first_name]" value="{{ user.firstName }}" />
	                                                </div>
	                                            </div>
	                                            <div class="uk-grid" data-uk-grid-margin>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="user_sexe">Sexe</label>
	                                                    <select name="user[sexe]" class="" data-md-selectize id="user_sexe">
	                                                    	<option value="Homme" {% if user.sexe == "Homme" %}selected{% endif %}>Homme</option>
	                                                    	<option value="Femme" {% if user.sexe == "Femme" %}selected{% endif %}>Femme</option>
	                                                    </select>
	                                                </div>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="user_first_name">Entreprise</label>
	                                                    <input class="uk-width-1-1" id="company_json" name="user[company_id]" type="text" value="{% if user.companyId %}{{ user.companyId.id }}{% endif %}" />
	                                                </div>
	                                            </div>
	                                            <div class="uk-grid" data-uk-grid-margin>
													<div class="uk-width-medium-1-2">
														<label for="user_job">Travail</label>
														<input class="md-input" type="text" id="user_job" name="user[job]" value="{{ user.job }}" />
													</div>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="user_date_birthday">Date d'anniversaire</label>
	                                                    <input class="kendodatepicker" type="text" id="user_date_birthday" name="user[date_birthday]" value="{{ user.dateBirthday|date("d-m-Y") }}" />
	                                                </div>
	                                            </div>
	                                            <div class="uk-grid" data-uk-grid-margin>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="user_langue">Langue</label>
	                                                    <select name="user[langue]" class="" data-md-selectize id="user_langue">
	                                                    	<option value="Français" {% if user.langue == "Français" %}selected{% endif %}>Français</option>
	                                                    	<option value="Anglais" {% if user.langue == "Anglais" %}selected{% endif %}>Anglais</option>
	                                                    	<option value="Espagnole" {% if user.langue == "Espagnole" %}selected{% endif %}>Espagnole</option>
	                                                    </select>
	                                                </div>
	                                            </div>

	                                            <h3 class="full_width_in_card heading_c">
	                                                Information
	                                            </h3>
	                                            <div class="uk-grid">
	                                                <div class="uk-width-1-1">
	                                                    <div class="uk-grid uk-grid-width-1-1 uk-grid-width-large-1-2" data-uk-grid-margin>
	                                                        <div>
	                                                            <div class="uk-input-group">
	                                                                <span class="uk-input-group-addon">
	                                                                    <i class="md-list-addon-icon material-icons">&#xE158;</i>
	                                                                </span>
	                                                                <label>Email</label>
	                                                                <input type="text" class="md-input" name="user[email]" value="{{ user.email }}" />
	                                                            </div>
	                                                        </div>
	                                                        <div>
	                                                            <div class="uk-input-group">
	                                                                <span class="uk-input-group-addon">
	                                                                    <i class="md-list-addon-icon material-icons">https</i>
	                                                                </span>
	                                                                <label>Mot de passe</label>
	                                                                <input type="text" class="md-input" name="user[password]" value="" />
	                                                            </div>
	                                                        </div>
	                                                        <div>
	                                                            <div class="uk-input-group">
	                                                                <span class="uk-input-group-addon">
	                                                                    <i class="md-list-addon-icon material-icons">&#xE0CD;</i>
	                                                                </span>
	                                                                <label>Téléphone</label>
	                                                                <input type="text" class="md-input" name="user[mobile_number]" value="{{ user.mobileNumber }}" />
	                                                            </div>
	                                                        </div>
	                                                        <div>
	                                                            <div class="uk-input-group">
	                                                                <span class="uk-input-group-addon">
	                                                                    <i class="md-list-addon-icon material-icons">&#xE0CD;</i>
	                                                                </span>
	                                                                <label>Fixe</label>
	                                                                <input type="text" class="md-input" name="user[fixe_number]" value="{{ user.fixeNumber }}" />
	                                                            </div>
	                                                        </div>
															<div>
																<div class="uk-input-group">
	                                                                <span class="uk-input-group-addon">
	                                                                    <i class="uk-icon-facebook"></i>
	                                                                </span>
																	<label>Facebook</label>
																	<input type="text" class="md-input" name="user[facebook]" value="{{ user.facebook }}" />
																</div>
															</div>
															<div>
																<div class="uk-input-group">
	                                                                <span class="uk-input-group-addon">
	                                                                    <i class="uk-icon-twitter"></i>
	                                                                </span>
																	<label>Twitter</label>
																	<input type="text" class="md-input" name="user[twitter]" value="{{ user.twitter }}" />
																</div>
															</div>
															<div>
																<div class="uk-input-group">
	                                                                <span class="uk-input-group-addon">
	                                                                    <i class="uk-icon-whatsapp"></i>
	                                                                </span>
																	<label>Whatsapp</label>
																	<input type="text" class="md-input" name="user[whatsapp]" value="{{ user.whatsapp }}" />
																</div>
															</div>
															<div>
																<div class="uk-input-group">
	                                                                <span class="uk-input-group-addon">
	                                                                    <i class="uk-icon-google-plus"></i>
	                                                                </span>
																	<label>Google plus</label>
																	<input type="text" class="md-input" name="user[googleplus]" value="{{ user.googleplus }}" />
																</div>
															</div>
	                                                    </div>
	                                                </div>
	                                            </div>
	                                        </div>
	                                    </li>
	                                </ul>
	                            </div>
	                        </div>
	                    </div>
	                </div>

	            </form>

	        </div>
	    </div>
	{% block modals %}
		{{ parent() }}
	{% endblock %}
{% endblock %}