{% extends '::base.html.twig' %}
{% block body %}
	{% block barre %}{{ parent() }}{% endblock %}
	{% block menu %}{{ parent() }}{% endblock %}
	<div id="page_content">
        <div id="page_content_inner">
            <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-large-1-1">
                        <div class="md-card">
                            <div class="uk-breadcrumb-wrapper">
                                <ul class="uk-breadcrumb">
                                    <li><a href="{{ path('restaurant_restaurant') }}"><i class="material-icons">home</i></a></li>
                                    <li><a href="#">Liste des Utilisateurs</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            <h3 class="heading_b uk-margin-bottom">Liste des Utilisateurs</h3>
            <div class="md-card uk-margin-medium-bottom">
                <div class="md-card-content">
                    <div class="uk-grid" data-uk-grid-margin>
                        <div class="uk-width-medium-1-2">
                            <label for="contact_list_search">Chercher un utilisateur</label>
                            <input class="md-input" type="text" id="filter_users"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="uk-grid-width-small-1-2 uk-grid-width-medium-1-3 uk-grid-width-large-1-4 uk-grid-width-xlarge-1-5 hierarchical_show" id="contact_list">
				{% for user in users %}
                <div data-uk-filter="{{user.firstName}} {{user.lastName}}" class="user" data-id="{{ user.id }}">
                    <div class="md-card md-card-hover">
                        <div class="md-card-head">
                            <div class="md-card-head-menu" data-uk-dropdown>
                                <i class="md-icon material-icons">&#xE5D4;</i>
                                <div class="uk-dropdown uk-dropdown-small uk-dropdown-flip">
                                    <ul class="uk-nav">
                                        <li><a href="{{ path('user_edit',{id:user.id}) }}">Edit</a></li>
                                        <li><a href="#" class="user_delete" data-id="{{ user.id }}">Supprimer</a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="uk-text-center">
                                <div class="item-avatar-wrapper">
                                    {% if user.companyId %}
                                        <span class="item-avatar uk-text-contrast md-bg-{{user.companyId.typeCompanyId.color}}">{{user.firstName[:1]~user.lastName[:1]|capitalize }}</span>
                                    {% endif %}
                            	</div>
                            </div>
                            <h3 class="md-card-head-text uk-text-center">
                                {{user.firstName}} {{user.lastName}}
                                {% if user.companyId %}
                                    <span class="uk-text-truncate">{{user.CompanyId.name}}</span>
                                {% endif %}
                            </h3>
                        </div>
                        <div class="md-card-content">
                            <ul class="md-list">
                                {% if user.email != "" %}
                                <li>
                                    <div class="md-list-content">
                                        <span class="md-list-heading">Email</span>
                                        <span class="uk-text-small uk-text-muted uk-text-truncate">{{user.email}}</span>
                                    </div>
                                </li>
                                {% endif %}
                                <li>
                                    <div class="md-list-content">
                                    	{% if user.mobileNumber != "" %}
                                        <span class="md-list-heading">Téléphone</span>
                                        <span class="uk-text-small uk-text-muted">{{user.mobileNumber}}</span>
                                    	{% endif %}
                                    	{% if user.fixeNumber != "" %}
                                        <span class="md-list-heading">Fixe</span>
                                        <span class="uk-text-small uk-text-muted">{{user.fixeNumber}}</span>
                                        {% endif %}
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                {% endfor %}
        	</div>
        </div>
    </div>
    <div class="md-fab-wrapper">
        <a class="md-fab md-fab-accent" href="{{ path('user_add') }}" title="Ajouter Utilisateur" data-uk-tooltip="{cls:'uk-tooltip-small',pos:'top'}">
            <i class="material-icons"></i>
        </a>
    </div>
{% endblock %}