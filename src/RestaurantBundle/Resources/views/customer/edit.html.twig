{% extends '::base.html.twig' %}
{% block body %}
	{% block barre %}{{ parent() }}{% endblock %}
	{% block menu %}{{ parent() }}{% endblock %}
		<div id="i-am-user-edit-page"></div>
		<div id="page_content">
	        <div id="page_content_inner">
	        	<div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-large-1-1">
                        <div class="md-card">
				        	<div class="uk-breadcrumb-wrapper">
					        	<ul class="uk-breadcrumb">
					        		<li><a href="{{ path('restaurant_restaurant') }}"><i class="material-icons">home</i></a></li>
					        		<li><a href="{{ path('customer_index') }}">Liste des Clients</a></li>
					        		<li><a href="#">Modifier : {{ customer.firstName~' '~customer.lastName }}</a></li>
					        	</ul>
					        </div>
					    </div>
					</div>
				</div>
	            <form action="{{ path('customer_save',{id:customer.id}) }}" class="uk-form-stacked" method="post" id="user_edit_form">
	                <div class="uk-grid" data-uk-grid-margin>
	                    <div class="uk-width-large-7-10">
	                        <div class="md-card">
	                            <div class="user_heading" data-uk-sticky="{ top: 48, media: 960 }">
	                                <div class="user_heading_avatar fileinput fileinput-new" data-provides="fileinput">
	                                    <div class="fileinput-new thumbnail">
	                                        <div class="item-avatar-wrapper">
	                            				<span class="item-avatar uk-text-contrast {% if customer.companyId and customer.companyId.typeCompanyId %}md-bg-{{customer.companyId.typeCompanyId.color}}{% endif %}">{{ customer.firstName[:1]~' '~customer.lastName[:1]|capitalize }}</span>
	                            			</div>
	                                    </div>
	                                </div>
	                                <div class="user_heading_content">
	                                    <h2 class="heading_b"><span class="uk-text-truncate" id="user_edit_uname">{{ customer.firstName~' '~customer.lastName }}</span>{% if customer.companyId %}<span class="sub-heading" id="user_edit_position">{{ customer.companyId.name }}</span>{% endif %}</h2>
	                                </div>
	                                <div class="md-fab-wrapper">
	                                    <button type="submit" id="user_edit_save" data-uk-tooltip="{cls:'uk-tooltip-small',pos:'bottom'}" class="md-fab md-fab-small md-fab-success" title="Save"><i class="material-icons md-color-white">&#xE161;</i></button>
	                                </div>
	                            </div>
	                            <div class="user_content">
	                                <ul id="user_edit_tabs" class="uk-tab" data-uk-tab="{connect:'#user_edit_tabs_content'}">
	                                    <li class="uk-active"><a href="#">À propos</a></li>
	                                    <li><a href="#">Personnel</a></li>
	                                </ul>
	                                <ul id="user_edit_tabs_content" class="uk-switcher uk-margin">
	                                    <li>
	                                        <div class="uk-margin-top">
	                                            <h3 class="full_width_in_card heading_c">
	                                                Information générale
	                                            </h3>
	                                            <div class="uk-grid" data-uk-grid-margin>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="customer_last_name">Nom du client</label>
	                                                    <input class="md-input" type="text" id="customer_last_name" name="customer[last_name]" value="{{ customer.lastName }}" />
	                                                </div>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="customer_first_name">Prénom du client</label>
	                                                    <input class="md-input" type="text" id="customer_first_name" name="customer[first_name]" value="{{ customer.firstName }}" />
	                                                </div>
	                                            </div>
	                                            <div class="uk-grid" data-uk-grid-margin>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="customer_sexe">Sexe</label>
	                                                    <select name="customer[sexe]" class="" data-md-selectize id="customer_sexe">
	                                                    	<option value="Mr." {% if customer.sexe == "Mr." %}selected{% endif %}>Mr.</option>
															<option value="Mme." {% if customer.sexe == "Mme." %}selected{% endif %}>Mme.</option>
															<option value="Mlle." {% if customer.sexe == "Mlle." %}selected{% endif %}>Mlle.</option>
	                                                    </select>
	                                                </div>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="customer_first_name">Entreprise</label>
	                                                    <input class="uk-width-1-1" id="company_json2" name="customer[company_id]" type="text" value="{% if customer.companyId %}{{ customer.companyId.id }}{% endif %}" />
	                                                </div>
	                                            </div>
	                                            <div class="uk-grid" data-uk-grid-margin>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="customer_country">Pays</label>
	                                                    <input type="text" class="uk-width-1-1 pays_json" name="customer[country]" id="customer_country" value="{{ customer.country }}">
	                                                </div>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="customer_city">Ville</label>
	                                                    <input class="md-input" type="text" id="customer_city" name="customer[city]" value="{{ customer.city }}" />
	                                                </div>
	                                            </div>
	                                            <div class="uk-grid" data-uk-grid-margin>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="customer_postal_code">Code postale </label>
	                                                    <input class="md-input" type="text" id="customer_postal_code" name="customer[postal_code]" value="{{ customer.postalCode }}" />
	                                                </div>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="customer_date_birthday">Date d'anniversaire</label>
	                                                    <input class="kendodatepicker" type="text" id="customer_date_birthday" name="customer[date_birthday]" value="{{ customer.dateBirthday|date("d-m-Y") }}" />
	                                                </div>
	                                            </div>
	                                            <div class="uk-grid" data-uk-grid-margin>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="customer_langue">Langue</label>
	                                                    <select name="customer[langue]" class="" data-md-selectize id="customer_langue">
	                                                    	<option value="Français" {% if customer.langue == "Français" %}selected{% endif %}>Français</option>
	                                                    	<option value="Anglais" {% if customer.langue == "Anglais" %}selected{% endif %}>Anglais</option>
	                                                    	<option value="Espagnole" {% if customer.langue == "Espagnole" %}selected{% endif %}>Espagnole</option>
	                                                    </select>
	                                                </div>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="customer_status">Status</label>
	                                                    <select name="customer[status]" class="" data-md-selectize id="customer_status">
	                                                    	<option value="gold" {% if customer.status == "gold" %}selected{% endif %}>Excellent client</option>
						                                    <option value="silver" {% if customer.status == "silver" %}selected{% endif %}>Trés bon client</option>
						                                    <option value="bronze" {% if customer.status == "bronze" %}selected{% endif %}>Bon client</option>
						                                    <option selected="selected" value="normal" {% if customer.status == "normal" or customer.status == "" %}selected{% endif %}>Normal</option>
						                                    <option value="brown" {% if customer.status == "brown" %}selected{% endif %}>Brown listé</option>
						                                    <option value="prospect" {% if customer.status == "prospect" %}selected{% endif %}>Prospect</option>
						                                    <option value="blacklist" {% if customer.status == "blacklist" %}selected{% endif %}>Black listé</option>
	                                                    </select>
	                                                </div>
	                                            </div>
	                                            <div class="uk-grid" data-uk-grid-margin>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="customer_food">Plat préféré</label>
	                                                    <textarea class="md-input" name="customer[favorite_food]" id="customer_food">{{ customer.favoriteFood }}</textarea>
	                                                </div>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="customer_drink">Boisson préféré</label>
	                                                    <textarea class="md-input" name="customer[favorite_drink]" id="customer_drink">{{ customer.favoriteDrink }}</textarea>
	                                                </div>
	                                            </div>
	                                            <div class="uk-grid" data-uk-grid-margin>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="customer_last_name">Table préféré</label>
                                                        <div class="uk-input-group">
                                                            <span class="uk-input-group-addon">
                                                                <a href="#" class="md-btn md-btn-small md-btn-success select-modal-plan" data-id="1"><i class="material-icons uk-text-contrast">add</i></a>
                                                            </span>
                                                            <div class="md-input-wrapper"><input type="text" class="k-textbox input-selected-tables" data-id="1"><input type="hidden" name="customer[favorite_table]" class="selected-tables-id" value="{{ customer.favoriteTable }}" data-id="1"><span class="md-input-bar"></span></div>
                                                        </div>
	                                                </div>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="customer_first_name">Serveur préféré</label>
	                                                    <textarea class="md-input" name="customer[favorite_server]" id="customer_favorite_server">{{ customer.favoriteServer }}</textarea>
	                                                </div>
	                                            </div>
	                                            <div class="uk-grid" data-uk-grid-margin>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="customer_handicape">Handicape</label>
	                                                    <textarea class="md-input" name="customer[handicape]" id="customer_handicape">{{ customer.handicape }}</textarea>
	                                                </div>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="customer_diet">Régime Alimentaire</label>
	                                                    <select name="customer[diet]" class="" data-md-selectize id="customer_diet">
	                                                    	<option value="vegetarian" {% if customer.diet == "vegetarian" %}selected{% endif %}>Végétarien</option>
	                                                    	<option value="normal" {% if customer.diet == "normal" %}selected{% endif %}>Normal</option>
	                                                    	<option value="omnivorous" {% if customer.diet == "omnivorous" %}selected{% endif %}>Omnivore</option>
	                                                    </select>
	                                                </div>
	                                            </div>
	                                            <div class="uk-grid" data-uk-grid-margin>
	                                                <div class="uk-width-medium-1-2">
	                                                    <label for="customer_address">Adresse</label>
	                                                    <textarea class="md-input" id="customer_address" name="customer[address]">{{ customer.address }}</textarea>
	                                                </div>
	                                                <div class="uk-width-1-2">
	                                                    <label for="user_edit_personal_info_control">Note</label>
	                                                    <textarea class="md-input" name="customer[note]" id="user_edit_personal_info_control">{{ customer.note }}</textarea>
	                                                </div>
	                                            </div>
	                                            <h3 class="full_width_in_card heading_c">
	                                                Information
	                                            </h3>
	                                            <div class="uk-grid">
	                                                <div class="uk-width-1-1">
	                                                    <div class="uk-grid uk-grid-width-1-1 uk-grid-width-large-1-2" data-uk-grid-margin>
	                                                        <div>
	                                                            <div class="uk-input-group">
	                                                                <span class="uk-input-group-addon">
	                                                                    <i class="md-list-addon-icon material-icons">&#xE158;</i>
	                                                                </span>
	                                                                <label>Email</label>
	                                                                <input type="text" class="md-input" name="customer[email]" value="{{ customer.email }}" />
	                                                            </div>
	                                                        </div>
	                                                        <div>
	                                                            <div class="uk-input-group">
	                                                                <span class="uk-input-group-addon">
	                                                                    <i class="md-list-addon-icon material-icons">&#xE0CD;</i>
	                                                                </span>
	                                                                <label>Fax</label>
	                                                                <input type="text" class="md-input" name="customer[fax]" value="{{ customer.fax }}" />
	                                                            </div>
	                                                        </div>
	                                                        <div>
	                                                            <div class="uk-input-group">
	                                                                <span class="uk-input-group-addon">
	                                                                    <i class="md-list-addon-icon material-icons">&#xE0CD;</i>
	                                                                </span>
	                                                                <label>Téléphone</label>
	                                                                <input type="text" class="md-input" name="customer[phone_number]" value="{{ customer.phoneNumber }}" />
	                                                            </div>
	                                                        </div>
	                                                        <div>
	                                                            <div class="uk-input-group">
	                                                                <span class="uk-input-group-addon">
	                                                                    <i class="md-list-addon-icon material-icons">&#xE0CD;</i>
	                                                                </span>
	                                                                <label>Mobile</label>
	                                                                <input type="text" class="md-input" name="customer[mobile_number]" value="{{ customer.mobileNumber }}" />
	                                                            </div>
	                                                        </div>
	                                                    </div>
	                                                </div>
	                                            </div>
	                                        </div>
	                                    </li>
	                                    <li>
	                                        Test
	                                    </li>
	                                </ul>
	                            </div>
	                        </div>
	                    </div>
	                    <div class="uk-width-large-3-10">
	                        <div class="md-card">
	                            <div class="md-card-content">
	                                <h3 class="heading_c uk-margin-medium-bottom">Autre Configuration</h3>
	                                <div class="uk-form-row">
	                                    <input type="checkbox" {% if customer.vip == "1" %}checked{% endif %} data-switchery name="customer[vip]" id="customer_vip" />
	                                    <label for="customer_vip" class="inline-label">VIP</label>
	                                </div>
	                                <div class="uk-form-row">
	                                    <input type="checkbox" {% if customer.newsletter == "1" %}checked{% endif %} data-switchery name="customer[newsletter]" id="customer_newsletter" />
	                                    <label for="customer_newsletter" class="inline-label">Newsletter</label>
	                                </div>
	                                <hr class="md-hr">
	                                <!-- <div class="uk-form-row">
	                                    <label class="uk-form-label" for="user_edit_role">User Role</label>
	                                    <select data-md-selectize>
	                                        <option value="">Select...</option>
	                                        <option value="admin">Admin</option>
	                                        <option value="super_admin">Super Admin</option>
	                                        <option value="editor" selected>Editor</option>
	                                        <option value="author">Author</option>
	                                        <option value="none">None</option>
	                                    </select>
	                                </div> -->
	                            </div>
	                        </div>
	                    </div>
	                </div>

	            </form>

	        </div>
	    </div>
	{% block modals %}
		{{ parent() }}
	{% endblock %}
{% endblock %}