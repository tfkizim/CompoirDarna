{% extends '::base.html.twig' %}
{% block body %}
	{% block barre %}{{ parent() }}{% endblock %}
	{% block menu %}{{ parent() }}{% endblock %}
	<div id="page_content">
        <div id="page_content_inner">
            <div class="uk-grid" data-uk-grid-margin>
                    <div class="uk-width-large-1-1">
                        <div class="md-card">
                            <div class="uk-breadcrumb-wrapper">
                                <ul class="uk-breadcrumb">
                                    <li><a href="{{ path('restaurant_restaurant') }}"><i class="material-icons">home</i></a></li>
                                    <li><a href="#">Liste des Clients</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            <h3 class="heading_b uk-margin-bottom">Liste des Clients</h3>
            <div class="md-card uk-margin-medium-bottom">
                <div class="md-card-content">
                    <div class="uk-grid" data-uk-grid-margin>
                        <div class="uk-width-medium-1-2">
                            <div class="uk-vertical-align">
                                <div class="uk-vertical-align-middle">
                                    <ul id="contact_list_filter" class="uk-subnav uk-subnav-pill uk-margin-remove">
                                        <li class="uk-active" data-uk-filter=""><a href="#">All</a></li>
                                        <!--<li  data-uk-filter=""><a href="#">Notre restaurant</a></li>
                                        <li  data-uk-filter=""><a href="#">Autre établissement</a></li>-->
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="uk-width-medium-1-2">
                            <label for="contact_list_search">Chercher un client</label>
                            <input class="md-input" type="text" id="contact_list_search"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="uk-grid-width-small-1-2 uk-grid-width-medium-1-3 uk-grid-width-large-1-4 uk-grid-width-xlarge-1-5 hierarchical_show" id="contact_list">
				{% for customer in customers %}
                <div data-uk-filter=",{{customer.firstName}} {{customer.lastName}}," class="customer" data-id="{{ customer.id }}">
                    <div class="md-card md-card-hover">
                        <div class="md-card-head">
                            <div class="md-card-head-menu" data-uk-dropdown>
                                <i class="md-icon material-icons">&#xE5D4;</i>
                                <div class="uk-dropdown uk-dropdown-small uk-dropdown-flip">
                                    <ul class="uk-nav">
                                        <li><a href="{{ path('customer_edit',{id:customer.id}) }}">Edit</a></li>
                                        <li><a href="#" class="customer_delete" data-id="{{ customer.id }}">Supprimer</a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="uk-text-center">
                            	<div class="item-avatar-wrapper">
                            		<span class="item-avatar uk-text-contrast {% if customer.companyId and customer.companyId.typeCompanyId %}md-bg-{{customer.companyId.typeCompanyId.color}}{% endif %}">{{customer.firstName[:1]~customer.lastName[:1]|capitalize }}</span>
                            	</div>
                            </div>
                            <h3 class="md-card-head-text uk-text-center">
                                {{customer.firstName}} {{customer.lastName}}
                                {% if customer.CompanyId %}<span class="uk-text-truncate">{{customer.CompanyId.name}}</span>{% endif %}
                            </h3>
                        </div>
                        <div class="md-card-content">
                            <ul class="md-list">
                            	{% if customer.note != "" %}
                                <li>
                                    <div class="md-list-content">
                                        <span class="md-list-heading">Info</span>
                                        <span class="uk-text-small uk-text-muted">{{customer.note}}</span>
                                    </div>
                                </li>
                                {% endif %}
                                {% if customer.email != "" %}
                                <li>
                                    <div class="md-list-content">
                                        <span class="md-list-heading">Email</span>
                                        <span class="uk-text-small uk-text-muted uk-text-truncate">{{customer.email}}</span>
                                    </div>
                                </li>
                                {% endif %}
                                <li>
                                    <div class="md-list-content">
                                    	{% if customer.phoneNumber != "" %}
                                        <span class="md-list-heading">Phone</span>
                                        <span class="uk-text-small uk-text-muted">{{customer.phoneNumber}}</span>
                                    	{% endif %}
                                    	{% if customer.fax != "" %}
                                        <span class="md-list-heading">Fax</span>
                                        <span class="uk-text-small uk-text-muted">{{customer.fax}}</span>
                                        {% endif %}
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                {% endfor %}
        	</div>
        </div>
    </div>
    <div class="md-fab-wrapper">
        <a class="md-fab md-fab-accent" href="{{ path('customer_add') }}" title="Ajouter Client" data-uk-tooltip="{cls:'uk-tooltip-small',pos:'top'}">
            <i class="material-icons"></i>
        </a>
    </div>
{% endblock %}