{% extends "RestaurantBundle:Security:layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
	<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    <div class="uk-form-row">
        <label for="register_username">{{ 'security.login.username'|trans }}</label>
        <input class="md-input" type="text" id="register_username" name="_username" required="required" />
    </div>
    <div class="uk-form-row">
        <label for="register_password">{{ 'security.login.password'|trans }}</label>
        <input class="md-input" type="password" id="register_password" name="_password" required="required" />
    </div>
    <div class="uk-form-row">
        <input type="checkbox" id="remember_me" name="_remember_me" checked value="on" />
    	<label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>
    <div class="uk-margin-medium-top">
        <button type="submit" class="md-btn md-btn-primary md-btn-block md-btn-large">{{ 'security.login.submit'|trans }}</button>
    </div>
</form>
{% endblock fos_user_content %}